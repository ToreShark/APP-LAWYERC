@model APP_LAWYER.WEB.Views.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Регистрация";
}

<h2>Регистрация</h2>

<form asp-action="Registration" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"/>
    <div>
        <div>
            <label asp-for="PhoneNumber">Номер телефона</label><br/>
            <input type="tel" asp-for="PhoneNumber"/>
            <span asp-validation-for="PhoneNumber"/>
        </div>
        <div>
            <label asp-for="Password">Пароль</label><br/>
            <input asp-for="Password"/>
            <span asp-validation-for="Password"/>
        </div>
        <div>
            <label asp-for="ConfirmPassword">Подтвердите пароль</label><br/>
            <input asp-for="ConfirmPassword"/>
            <span asp-validation-for="ConfirmPassword"/>
        </div>
        <div>
            <input class="btn btn-success" type="submit" value="Регистрация"/>
        </div>
    </div>
</form>