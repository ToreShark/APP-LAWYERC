@model APP_LAWYER.WEB.Models.CategoryDetailsViewModel

<h1>@Model.Category.Name</h1>
<p>@Model.Category.Description</p>

<div class="row">
    @foreach (var subcategory in Model.Subcategories)
    {
        <div class="col-sm-4">
            <div class="card shadow-sm mt-4 bg-light">
                <div class="card-body d-flex flex-column"> <!-- Добавьте классы d-flex и flex-column -->
                    <img src="@subcategory.Image" alt="@subcategory.Description" class="card-img-top img-fluid"/>
                    <div class="card-body card-content flex-grow-1"> <!-- Добавьте класс flex-grow-1 -->
                        <h5 class="card-title text-muted">@subcategory.Name</h5>
                        <p class="card-text text-muted">@subcategory.Description</p>
                    </div>
                    <div class="mt-auto"> <!-- Добавьте класс mt-auto -->
                        @* <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#detailsModal-@subcategory.Id">Подробнее</button> *@
                        <a href="@Url.Action("Index", "Subcategory", new { id = subcategory.Id })" class="btn btn-primary">Подробнее</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            var maxHeight = 0;
            $(".card-content").each(function(){
                if ($(this).height() > maxHeight) { maxHeight = $(this).height(); }
            });
            $(".card-content").height(maxHeight);
        });
    </script>
}