@model IReadOnlyList<APP_LAWYER.DAL.Entities.Category>

@{
    ViewBag.Title = "Управление категориями";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <thead>
    <tr>
        <th>Имя категории</th>
        <th>Описание</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Name</td>
            <td>@category.Description</td>
            <td>
                <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id">Редактировать</a> |
                <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-area="Admin" asp-controller="Category" asp-action="Create">Добавить новую категорию</a>